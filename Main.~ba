#Include "Input" 
 OpenScreen 800,600,16,2
 ;load images
 LoadImage "blabbergaster.png",1
 LoadImage "options.png",2
 LoadImage "character.png",3
 ;-1-
 	;load varibles
 	x# = 200
 	y# = 200
 	walkspeed# = 2.5
 	;-2-
 		;set the Frames per second
 		SetFPS 40 
 		;-3-
 Do
 		;this start inital screen
Label1:		
			DrawImage 1,0,0,0
 				Text 290,460,"Press Space Key to go to options"
 					Text 290,470,"Press the E to start the game"
 						If MouseX()=160
 							Text 165,275,"The B is dangerous"
 							If Scancode()=18
								Do
									Cls 1
										;Character controlls 
									
										If LeftKey() then x# = x# - walkspeed# 
    									If RightKey()then x# = x# + walkspeed#   	
    									If UpKey() Then y# = y# - walkspeed# 
    									If DownKey() Then y# = y# + walkspeed# 
    									If EscKey()=1 then end 	
										DrawImage 3,x#,y#,1
									sync
    								waitkey
 							Loop	
 						Endif
 					Endif
 		sync
 		;-4-
 			
 					If Scancode()=18
						Do
							Cls 1
									;Character controlls 
									
									If LeftKey() then x# = x# - walkspeed# 
    								If RightKey()then x# = x# + walkspeed#   	
    								If UpKey() Then y# = y# - walkspeed# 
    								If DownKey() Then y# = y# + walkspeed# 
    								If EscKey()=1 then end 	
								DrawImage 3,x#,y#,1
									sync
    								waitkey
 						Loop	
 					Endif
 					If SpaceKey()=1   
				    		Do			
								Cls 1
									DrawImage 2,0,0,0
    									Text 100,150,"This Is the options screen."
    									Text 100,158,"You can make customizations to the game here"
							
							
						
    							sync
    							waitkey
    							If EscKey()=1 then end 	
    						Loop
    				Endif		
loop